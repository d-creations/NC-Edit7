{
  "name": "nc-edit7",
  "version": "0.1.0",
  "description": "Multi-channel CNC NC code editor with plot interface",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run copy-ncplot7py",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "copy-ncplot7py": "node scripts/copy-ncplot7py.js"
  },
  "dependencies": {
    "ace-builds": "^1.32.0",
    "three": "^0.161.0"
  },
  "devDependencies": {
    "@types/three": "^0.161.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/ui": "^4.0.12",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^27.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^4.0.12"
  }
}
